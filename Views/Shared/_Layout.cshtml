<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Spotify Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="/">Spotify Demo</a>
            <a class="btn btn-success ms-auto" href="/auth/login">Login com Spotify</a>
        </div>
    </nav>

    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="fixed-bottom bg-light border-top">
        <div class="container py-2 d-flex align-items-center gap-2">
            <button id="btnPlay" class="btn btn-primary btn-sm">Play</button>
            <button id="btnPause" class="btn btn-outline-secondary btn-sm">Pause</button>
            <span id="nowPlaying" class="ms-2">–</span>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://sdk.scdn.co/spotify-player.js"></script>

    <script src="/js/player.js"></script>
</body>
</html>
